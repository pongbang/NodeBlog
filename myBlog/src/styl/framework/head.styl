@import "./base.styl"
header 
  background-image:  url('../img/1.jpg')
.blog-head 
  display grid
  grid-template-columns 1fr minmax(500px,auto) 3fr 2fr
  grid-template-rows 60px
  padding 20px
  align-content center

.blog-head--logo 
  justify-self center
  align-self center
  overflow hidden
  width 45px
  height 45px
  border-radius 50%

.blog-head--nav 
  align-self center
  grid-template-columns auto
  text-align center

.blog-nav--list 
  display grid
  grid-template-columns repeat(6, 1fr)

.blog-head--search 
  justify-self center
  align-self center
  padding 4px
  border-radius 6px
  box-shadow 0 0 2px #222


.blog-input--search 
  border 0
  outline 0
  background-color rgba(0, 0, 0, 0)
  padding 0 6px



.blog-head--login 
  align-self center
  color #ccc


.blog-head-menu 
  align-self center
  justify-self center
  font-size 40px
  grid-column-start 4

.blog-head--avatar
  position relative
  display flex
  justify-content center
  align-items center
  overflow hidden
  width 40px
  height 40px
  border-radius 50%
  box-shadow 0 0 4px font-theme-color
  &:hover 
    & .blog-head--write
      transform translateX(0) translateY(10px)
.blog-head--write
  position absolute
  transform translateX(-30px)
  transition .5s
