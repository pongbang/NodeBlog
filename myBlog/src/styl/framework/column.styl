.blog-column
  & .blog-column--item
    display flex
    flex-direction column
    justify-content center
    align-items center
    padding padding-space * 2
    background-color #fff
    color bg-reverse-color
    box-shadow 0 0 4px 2px rgba(122,122,122,.3) inset
    transition .3s
    & p
      padding padding-space 
      font-size 14px
      line-height 2
    &:nth-of-type(2n)
      color #fff
      background-color bg-reverse-color
    &:hover 
      z-index 9999
      transform scale(1.1)
    &.blog-column--add
      position relative
      display flex
      justify-content center
      align-items center
      background-color line-modifier-color
      &::after,
      &::before
        position absolute
        content:''
        background-color line-theme-color
        width 50%
        height 8px
        border-radius 2px
      &::before
        width 8px
        height 50%
        

for num in 2 4 6 8 10
  .item-row-{num}
    width num * 60px
  .item-column-{num}
    height num * 60px